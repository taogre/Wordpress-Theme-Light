// ------ Style the content ------

red = #ce1b1b

//Set color for everything
body
  color hsl(0,0%,34%)
  font-family 'Open Sans', sans-serif
  box-sizing border-box

//Style the images
img
  max-width 100%
  height auto
//Add label to image
.image-label
  display block
  margin-bottom -1em
  margin-top -2em
//Style the fullwidth image
img.fullwidth
  width 100%
//Style the align left image
img.alignleft
  @media screen and (min-width 650px)
    float left
    margin-right 15px
    margin-bottom 15px
//Style the blockquotes
blockquote
  margin 1.5em 0
  padding 1px 15px
  color #525252
  background #f3f3f3
  border-left 5px solid #6FC1D6
  border-radius 2px
a
  color red
  text-decoration none
a:hover
  text-decoration underline
h1, h2, h3, h4, h5, h6
  color #272727
  line-height 1.3
h1
  font-size 1.9em
  line-height 1.1
hr
  border none
  background rgba(0,0,0,0.2)
  height 2px
//Style the selection
*::selection
  color white
  background black
//Add style to list
ul>li, ol>li
  margin-bottom 5px
  &:last-child
    margin-bottom 0px
