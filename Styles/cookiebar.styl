#cookiebar
  position fixed
  display none
  bottom 0px
  width 100%
  line-height 1
  font-size 0.9em
  color white
  text-align center
  background #101010
  padding 15px
  z-index 1000
  p
    display inline-block
    margin 0px
    margin-bottom 5px
  div
    display inline-block
    padding 5px 8px
    background #0f73a0
    border-radius 3px
    margin-left 15px
    cursor pointer
  &.visible
    display block
