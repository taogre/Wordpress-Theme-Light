//out: ../singleonly.css, compress:true

//Set red color
red = #ce1b1b

//Disable readprocess
#readprocess
#readprocess>div
  display block !important

//Remove the space of first text thing
div#main-content>*:first-child
  margin-top 0px

//Add paddingleft to image
@media screen and (min-width 631px)
  div#navigationbar div.headercontent
    padding-left 40px !important

//Doing text stuff
div#main-content
  color hsl(0,0%,34%)
  //Set color of time
  time.articletime
    color #717171
  //Remove topspace of first item after time
  *:nth-child(2)
    margin-top 2px
  //Get some space
  @media screen and (min-width 630px)
    padding-left 30px
    padding-right @padding-left
  img
    max-width 100%
    height auto
  //Add label to image
  .image-label
    display block
    margin-bottom -1em
    margin-top -2em
  //Style the fullwidth image
  img.fullwidth
    width 100%
  //Style the align left image
  img.alignleft
    @media screen and (min-width 650px)
      float left
      margin-right 15px
      margin-bottom 15px
  //Style the blockquotes
  blockquote
    margin: 1.5em 0;
    border-top 1px solid rgba(0,0,0,0.2);
    border-bottom @border-top
    padding 0;
    font-size: 1.1em;
    line-height: 1.6;
    color #272727
  a
    color red
    text-decoration none
  a:hover
    text-decoration underline
  h1, h2, h3, h4, h5, h6
    color #272727
    line-height 1.3
  h1
    font-size 1.9em
    line-height 1.1
  hr
    border none
    background rgba(0,0,0,0.2)
    height 2px
  //Add style to list
  ul>li, ol>li
    margin-bottom 5px
    &:last-child
      margin-bottom 0px
